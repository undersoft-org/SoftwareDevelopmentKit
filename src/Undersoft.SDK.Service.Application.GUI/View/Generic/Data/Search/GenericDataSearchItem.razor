@using System.ComponentModel.DataAnnotations
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK;
@using Undersoft.SDK.Service.Application.GUI.View.Abstraction

@inherits ViewItem

<GenericFieldMenuItem Id="@ViewId" Style="height:auto">
    <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.End" HorizontalGap="0" VerticalGap="0" VerticalAlignment="VerticalAlignment.Center">
        <FluentKeyCode OnKeyDown="@KeyDownHandlerAsync">
            <FluentSearch Id="genericsearchbar" @ref="FluentSearch" Class="@(Class + "searchbar")" @bind-Value="SearchValue" Appearance="FluentInputAppearance.Outline" Immediate="true" ImmediateDelay="1000" @bind-Value:after="HandleSearchAsync" />
        </FluentKeyCode>
    </FluentStack>

</GenericFieldMenuItem>


