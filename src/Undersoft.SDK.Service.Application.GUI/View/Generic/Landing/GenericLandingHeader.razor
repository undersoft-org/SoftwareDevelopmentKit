@using Undersoft.SDK.Service.Access;

@inherits FluentComponentBase

@typeparam TMenu where TMenu : class, IOrigin, IInnerProxy
@typeparam TAccount where TAccount : class, IOrigin, IInnerProxy, IAuthorization

<FluentHeader class="siteheader" Height="50">
    <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center" Width="100%" Style="height:50px">
        
        <FluentSpacer />
        <div class="top-bar-tools" style="height:35px">
            <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center" HorizontalGap="15">
                <div style="margin-right:-2px; height:20px">
                    <GenericMenuSet TMenu="TMenu" NavigationManager="@NavigationManager" />
                </div>
                <div class="github" style="height:20px">
                    <FluentAnchor Appearance="Appearance.Hypertext" Href="https://github.com/undersoft-org/Undersoft.Suite" Target="_blank" Rel="noreferrer noopener" title="Undersoft source on GitHub" aria-label="SSC Repository">
                       
                    </FluentAnchor>
                </div>
                <div class="notification" style="height:20px">
                    <GenericNotificationPanelButton />
                </div>
                <div class="appearance" style="height:20px">
                    <GenericAppearancePanelButton />
                </div>
                <div class="account" style="margin-right:-15px;">
                    <GenericAccountMenuPersona TAccount="TAccount" />
                </div>
            </FluentStack>
        </div>

    </FluentStack>
</FluentHeader>

@code
{
    [Inject]
    private AppearanceState appearance { get; set; } = default!;
}